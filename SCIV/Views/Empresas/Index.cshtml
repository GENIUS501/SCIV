@model IEnumerable<SCIV.Models.Tab_Empresa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout - Mantenimientos.cshtml";
}

<h2>Index</h2>
<!--Mostrar alerta-->
@Html.Raw(TempData["msg"])
<p>
    @Html.ActionLink("Agregar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <span>Cedula Juridica</span>
        </th>
        <th>
            <span>Nombre de la empresa</span>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula_Juridica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Empresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new {  id=item.Cedula_Juridica }) |
                @Html.ActionLink("Detalle", "Details", new { id = item.Cedula_Juridica }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.Cedula_Juridica })
            </td>
        </tr>
    }

</table>
