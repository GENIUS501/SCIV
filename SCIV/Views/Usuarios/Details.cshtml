@model SCIV.Models.Tab_Usuarios

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout-Seguridad.cshtml";
}

<h2>Usuarios</h2>

<div>
    <h4>Consultar Usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Cedula)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cedula)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NickName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NickName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Apellido1)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Apellido1)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Apellido2)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Apellido2)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Contrasena)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Contrasena)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genero)
        </dt>

        <dd>
            <!--IF que decide si se muestra Masculino o femenino-->
            @if (Model.Genero == "M")
            {
                <span>Masculino</span>
            }
            else
            {
                <span>Femenino</span>
            }
        </dd>

        <dt>
            <span>Perfil de acceso</span>
        </dt>

        <dd>
            <!--Muestra el nombre del perfil-->
            @SCIV.Controllers.UsuariosController.NombrePerfil(Model.Id_Perfil.ToString())
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.NickName  }) |
    @Html.ActionLink("Volver a la lista", "Index")
</p>
