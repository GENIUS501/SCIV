@model IEnumerable<SCIV.Models.Tab_Perfiles>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout-Seguridad.cshtml";
}
<br>
<br>
<br>
<br>
<h2>Mantenimiento de perfiles</h2>
<!--Mostrar alerta-->
@Html.Raw(TempData["msg"])
<p>
    @Html.ActionLink("Agregar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <span>Id perfil</span>
        </th>
        <th>
            <span>Nombre de perfil</span>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Perfil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Perfil)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Perfil }) |
                @Html.ActionLink("Consultar", "Details", new { id = item.Id_Perfil }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.Id_Perfil }, new { @class = "aElimina" })
            </td>
        </tr>
    }

</table>
<!--Ventana de esta seguro-->
@section scripts{
    <script>
        $(".aElimina").click(function (event) {
            if (!confirm("Realmente de eliminar el usuario?")) {
                event.preventDefault();
            }
        });
    </script>
}