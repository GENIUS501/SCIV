        <label for="usuagregar">Agregar</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <input type="checkbox" name="perAgregar" value="true">
        <label for="empAgregar">Agregar</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <input type="checkbox" name="empAgregar" value="true">
        <label for="prodAgregar">Agregar</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <input type="checkbox" name="prodAgregar" value="true">
        <label for="perAgregar">Agregar</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <input type="checkbox" name="lisvenAgregar" value="true">
        <label for="lisvenAgregar">Agregar</label>
