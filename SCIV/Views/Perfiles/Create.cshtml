        <label for="UsuActualizar">Editar</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <input type="checkbox" name="perActualizar" value="true">
        <label for="perActualizar">Editar</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <input type="checkbox" name="empActualizar" value="true">
        <label for="empActualizar">Editar</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <input type="checkbox" name="prodActualizar" value="true">
        <label for="prodActualizar">Editar</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <input type="checkbox" name="lisvenActualizar" value="true">
        <label for="lisvenActualizar">Editar</label>
        <!---->
        <br />
        <!--Eliminar-->
        &nbsp;&nbsp;&nbsp;<input type="checkbox" name="UsuEliminar" value="true">
        <label for="UsuEliminar">Eliminar</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <input type="checkbox" name="perEliminar" value="true">
        <label for="perEliminar">Eliminar</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <input type="checkbox" name="empEliminar" value="true">
