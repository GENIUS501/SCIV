@model IEnumerable<SCIV.Models.Tab_Lista_Ventas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout-Reportes.cshtml";
}

<h2>Reporte de listas de ventas al por mayor</h2>

<div class="form-group">
    <label class="control-label col-md-2">Codigo del producto</label>
    <div class="col-md-10">
        <input type="text" name="Codigo" value="" class="form-control" >
        @Html.ActionLink("Generar", "Codigo")
    </div>
</div>

<div class="form-group">
    <label class="control-label col-md-2">Fecha</label>
    <div class="col-md-10">
        <input type="date" name="Fecha" value="" class="form-control" />
        @Html.ActionLink("Generar", "Codigo")
    </div>
</div>

<div class="form-group">
    <label class="control-label col-md-2">Nombre de la empresa</label>
    <div class="col-md-10">
        <input type="text" name="Nombre" value="" class="form-control" />
        @Html.ActionLink("Generar", "Codigo")
    </div>
</div>

<table class="table">
    <tr>
        <th>
            <span>Cedula de la empresa</span>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            <span>Id de la lista</span>
        </th>
        <th>
            <span>Usuario Creador</span>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nota_Adicional)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula_Empresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Lista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NickName_Creador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota_Adicional)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
